<resources>
    <style name="uni.prompt.DialogAnimations.slideWindow" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/uni_prompt_anim_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/uni_prompt_anim_slide_out_top</item>
    </style>
    <style name="uni.prompt.ActionsheetDialog" parent="android:style/Theme.Dialog">
    	<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowFrame">@null</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="uni.prompt.LoadingDialog" parent="android:style/Theme.Dialog">
    	<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowFrame">@null</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:windowIsTranslucent">true</item>
    	<item name="android:backgroundDimEnabled">false</item>
    </style>
		
</resources>
